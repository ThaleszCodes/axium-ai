{
  "system": {
    "name": "Axium AI",
    "description": "Plataforma de criação de IA 'All-in-One' com interface premium minimalista.",
    "version": "1.2.0",
    "architecture": "SPA (Single Page Application)",
    "stack": ["React", "TypeScript", "Tailwind CSS", "Framer Motion", "Google GenAI SDK"],
    "theme": {
      "mode": "dark",
      "palette": {
        "primary": "zinc-50 (White)",
        "secondary": "zinc-900 (Black)",
        "accent": "Metallic Gradients",
        "effects": ["Backdrop Blur", "Noise Texture", "Ambient Glow"]
      }
    }
  },
  "authentication": {
    "stages": [
      {
        "id": "landing",
        "component": "LandingPage",
        "features": ["Cinematic Intro", "Blob Animation Button"]
      },
      {
        "id": "login",
        "component": "LoginPage",
        "features": ["Glassmorphism Form", "ShatterButton Animation"]
      },
      {
        "id": "app",
        "component": "Dashboard",
        "features": ["Floating Navigation", "Tool Rendering", "State Persistence"]
      }
    ]
  },
